<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vilso.projectpie" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Global"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name=".IdeasActivity"
            android:label="@string/title_activity_ideas" >
        </activity>
        <activity
            android:name=".TestActivity"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name=".ViewIdeaActivity"
            android:label="@string/title_activity_view_idea" >
        </activity>
        <activity
            android:name=".ViewMyIdeaActivity"
            android:label="@string/title_activity_view_my_idea" >
        </activity>
        <activity
            android:name=".AddPitchActivity"
            android:label="@string/title_activity_add_pitch" >
        </activity>
        <activity
            android:name=".floatingactionbutton.ActivityMyIdeaDetails"
            android:label="@string/title_activity_activity_my_idea_details" >
        </activity>
        <activity
            android:name=".MyIdeaStatisticsActivity"
            android:label="@string/title_activity_my_idea_statistics" >
        </activity>
    </application>

</manifest>
